<form role="form" class="minotar-settings">
	<div class="row">
		<div class="col-sm-2 col-xs-12 settings-header">Minotar</div>
		<div class="col-sm-10 col-xs-12">
			<div class="form-group">
				<label for="default" class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<input type="checkbox" class="mdl-switch__input" id="default" name="default" />
					<span class="mdl-switch__label">Use Minotar as default user picture</span>
				</label>
			</div>
			<div class="checkbox">
				<label for="force" class="mdl-switch mdl-js-switch mdl-js-ripple-effect">
					<input type="checkbox" class="mdl-switch__input" id="force" name="force" />
					<span class="mdl-switch__label">Force all users to use Minotar</span>
				</label>
			</div>
		</div>
	</div>
</form>

<button id="save" class="floating-button mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored">
	<i class="material-icons">save</i>
</button>